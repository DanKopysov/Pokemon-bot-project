        "            soup2=BeautifulSoup(requests.get(web_page_pers).content, 'html.parser')\n",
        "            sub_table=soup2.find('table', attrs={\"class\": \"vitals-table\"})\n",
        "            sep = '\\n'  \n",
        "            sep1 = 'In <abbr'\n",
