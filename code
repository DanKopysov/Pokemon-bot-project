        "bot = telebot.TeleBot(token, threaded = False)\n",
        "\n",
        "#Подгружаю основную таблицу\n",
        "def get_data(web_page1):\n",
        "  page1='https://pokemondb.net/pokedex/all'\n",
        "  g=requests.get(page1)\n",
        "  web_page1=g.text\n",
        "  soup1=BeautifulSoup(web_page1, 'html.parser')\n",
        "#print(soup1.prettify())\n",
        "\n",
        "#выделение таблицы с данными из кода страницы\n",
        "  pokemon_table=soup1.find('table', attrs={\"id\": \"pokedex\"})\n",
        "\n",
        "#здесь и далее - формирование списков с именами и разными параметрами\n",
        "  pok_name = pokemon_table.find_all(\"td\", attrs={\"class\": \"cell-name\"})\n",
        "  pok_names=[]\n",
        "  for cat in pok_name:\n",
        "    cat = cat.getText(separator=u'/').strip()\n",
        "    pok_names.append(cat)\n",
        "  pok_names=pd.Series(pok_names)\n",
        "  \n",
        "  #Список с общим значением\n",
        "  pok_total = pokemon_table.find_all(\"td\", attrs={\"class\": \"cell-total\"})\n",
        "  pok_totals=[]\n",
        "  for cat in pok_total:\n",
        "    cat = cat.text.strip()\n",
        "    pok_totals.append(cat)\n",
        "  pok_totals=pd.Series(pok_totals)\n",
        "  \n",
        "  #Выделение всех строк\n",
        "  tr=pokemon_table.find_all(\"tr\")\n",
        "  del tr[0]\n",
        "\n",
        "  #Список с ХП\n",
        "  pok_HP=[]\n",
        "  for i in range(len(tr)):\n",
        "    tag_a = tr[i].find_all('td')\n",
        "    pok_HP.append(tag_a[4].text)\n",
        "  pok_HP=pd.Series(pok_HP)\n",
        "  \n",
        "  #Список с уроном\n",
        "  pok_attack=[]\n",
        "  for i in range(len(tr)):\n",
        "    tag_a = tr[i].find_all('td')\n",
        "    pok_attack.append(tag_a[5].text)\n",
        "  pok_attack=pd.Series(pok_attack)\n",
        "    \n",
        "  #Список с защитой\n",
        "  pok_defense=[]\n",
        "  for i in range(len(tr)):\n",
        "    tag_a = tr[i].find_all('td')\n",
        "    pok_defense.append(tag_a[6].text)\n",
        "  pok_defense=pd.Series(pok_defense)\n",
        "   \n",
        "  #Список со скоростью атаки  \n",
        "  pok_spattack=[]\n",
        "  for i in range(len(tr)):\n",
        "    tag_a = tr[i].find_all('td')\n",
        "    pok_spattack.append(tag_a[7].text) \n",
        "  pok_spattack=pd.Series(pok_spattack)\n",
        "  \n",
        "  #Список с неведомой дичью\n",
        "  pok_spdefense=[]\n",
        "  for i in range(len(tr)):\n",
        "    tag_a = tr[i].find_all('td')\n",
        "    pok_spdefense.append(tag_a[8].text)\n",
        "  pok_spdefense=pd.Series(pok_spdefense)\n",
        "  \n",
        "  #Список со скоростью\n",
        "  pok_speed=[]\n",
        "  for i in range(len(tr)):\n",
        "    tag_a = tr[i].find_all('td')\n",
        "    pok_speed.append(tag_a[9].text)\n",
        "  pok_speed=pd.Series(pok_speed)\n",
        "  \n",
        "  #Список с типом\n",
        "  pok_type=[]\n",
        "  for i in range(len(tr)):\n",
        "    tag_a = tr[i].find_all('td')\n",
        "    pok_type.append(tag_a[2].getText(separator=u'/'))\n",
        "  pok_type=pd.Series(pok_type)\n",
        "  \n",
        "  #Создание словаря и датафрейма\n",
        "  d={'Name': pok_names, \n",
        "   'Type': pok_type, \n",
        "   'Total': pok_totals, \n",
        "   'HP': pok_HP, \n",
        "   'Attack': pok_attack, \n",
        "   'Defense': pok_defense, \n",
        "   'Sp. Attack': pok_spattack, \n",
        "   'Sp. Defense': pok_spdefense, \n",
        "   'Speed': pok_speed}\n",
        "  df=pd.DataFrame(d)\n",
        "  df=df[['Name', 'Type', 'Total', 'HP', 'Attack', 'Defense', 'Sp. Attack', 'Sp. Defense', 'Speed']]\n",
        "  return df\n",
        "\n",
        "\n",
        "#Запуск бота, первое сообщение и ввод ответа\n",
        "@bot.message_handler(commands=['start'])\n",
        "def mychat(message):\n",
        "    m = bot.send_message(message.chat.id, 'Hi, meatbag. I am Pokemon bot. Enter the name of pokemon you wanna know about. Be respectful, make first letter capital')\n",
        "    bot.register_next_step_handler(m, b)\n",
        "   \n",
        "   \n",
        "\n",
        "#Ох почти весь бот    \n",
        "def b(message):\n",
        "    if any( [message.text == 'Neketa', message.text == 'Nikitos', message.text == 'Nikita', message.text == 'Neketos'] ):\n",
