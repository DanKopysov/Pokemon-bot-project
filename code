        "            for link in sub_table('a', href = True, class_ = False):  #загнал в список ссылки на страницы\n",
        "                ability_tag.append(link['href'])\n",
        "        except:\n",
        "            bot.send_message(message.chat.id, 'And maybe try harder, meatbag. You do something wrong.')    \n",
        "        try:    \n",
        "            for i in range(0, len(ability_tag)):\n",
        "                web_page_abil = 'https://pokemondb.net' + str(ability_tag[i])\n",
        "                soup3=BeautifulSoup(requests.get(web_page_abil).content, 'html.parser')\n",
        "                title=soup3.html.body.main.findAll('h1')\n",
        "                desc=soup3.html.body.main.findAll('div', attrs={\"class\": \"grid-col span-md-12 span-lg-6\"})\n",
        "                for i in range(0, len(desc)):\n",
        "                   desc_clear.append(re.sub('<[^>]*>', '', \n",
        "                                            (str(desc[i]('p')).replace('[', '').replace(']', '')).split(sep, 1)[0].split(sep1, 1)[0]))\n",
        "                for i in range(0, len(title)):\n",
        "                    title_clear.append(re.sub('<[^>]*>', '', \n",
        "                                              str(title[i])).replace('[', '').replace(']', '').replace(' (ability)', ''))\n",
        "            \n",
        "            title_clear1 = ['*' + title_clear[bob] + '*' for bob in range(0, len(title_clear))] \n",
        "            \n",
        "        #bot.send_message(message.chat.id, str(desc_clear))\n",
        "            if len(desc_clear)==1:\n",
        "                bobel=(title_clear1[0] + ': ' + desc_clear[0] + '\\n')\n",
        "            elif len(desc_clear)==4:\n",
        "                bobel=(title_clear1[0] + ': ' + desc_clear[0] + '\\n' + '\\n' + \n",
        "                       title_clear1[1] + ': ' + desc_clear[2] + '\\n')\n",
        "            elif len(desc_clear)==6:\n",
        "                bobel=(title_clear1[0] + ': ' + desc_clear[0] + '\\n' + '\\n' +\n",
        "                       title_clear1[1] + ': ' + desc_clear[2] + '\\n' + '\\n' +\n",
        "                       title_clear1[2] + ': ' + desc_clear[4] + '\\n')\n",
        "            elif len(desc_clear)==8:\n",
        "                bobel=(title_clear1[0] + ': ' + desc_clear[0] + '\\n' + '\\n' +\n",
